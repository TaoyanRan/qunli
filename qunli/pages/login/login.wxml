<!--login.wxml-->
<view class="pg-login">
  <form class="fm-login" bindsubmit="formSubmit">
    <view class="section">
      <input name="input" type="tel" pattern="[0-9]*" placeholder="请输入您的手机号" />
      <button class="btn-vcode"  bindtap="default">获取验证码</button>
    </view>
    <view class="section">
      <input name="input" placeholder="请输入验证码" />
    </view>
    <view class="section-btn">
      <button formType="submit" hover-class="button-hover" bindtap="default">完成</button>
    </view>
  </form>
</view>